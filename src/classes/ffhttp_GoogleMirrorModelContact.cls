/**
 * ffhttp_GoogleMirrorModelContact
 *
 * An object that represents the meta data for a contact in Google Mirror.
 * https://developers.google.com/glass/v1/reference/contacts
 */
public with sharing class ffhttp_GoogleMirrorModelContact extends ffhttp_GoogleMirrorModelAbstractObject
{
	//Statics
	//Types
	public static final String TYPE_INDIVIDUAL = 'INDIVIDUAL';						//Represents a single person.
	public static final String TYPE_GROUP = 'GROUP'; 								//Represents more than a single person.
	
	//Accept Command Types
	public static final String ACCEPT_COMMAND_TAKE_A_NOTE = 'TAKE_A_NOTE'; 			//Shares a timeline item with the transcription of user 
																					//speech from the "Take a note" voice menu command.
	public static final String ACCEPT_COMMAND_POST_AN_UPDATE = 'POST_AN_UPDATE';	//Shares a timeline item with the transcription of user 
																					//speech from the "Post an update" voice menu command.
	
	//Sharing feature
	public static final String SHARING_FEATURE_ADD_CAPTION = 'ADD_CAPTION';	
	
	//Instance Variables
	private List<AcceptCommand> acceptCommands;	//A list of voice menu commands that a contact can handle. 
												//Glass shows up to three contacts for each voice menu command. 
												//If there are more than that, the three contacts with the highest priority are shown 
												//for that particular command.
	private List<String> acceptTypes;			//A list of MIME types that a contact supports. The contact will be shown to the user 
												//if any of its acceptTypes matches any of the types of the attachments on the item.
												//If no acceptTypes are given, the contact will be shown for all items.
	private String displayName;					//The name to display for this contact.
	private String id;							//An ID for this contact. 
												//This is generated by the application and is treated as an opaque token.
	private List<String> imageUrls;				//Set of image URLs to display for a contact. 
												//Most contacts will have a single image, but a "group" contact may include up to 8 
												//image URLs and they will be resized and cropped into a mosaic on the client.
	private String phoneNumber;					//Primary phone number for the contact. This can be a fully-qualified number, with country 
												//calling code and area code, or a local number.
	private Integer priority;					//Priority for the contact to determine ordering in a list of contacts. 
												//Contacts with higher priorities will be shown before ones with lower priorities.
	private String[] sharingFeatures;			//A list of sharing features that a contact can handle. Allowed values are: ADD_CAPTION.
	private String source;						//The ID of the application that created this contact. This is populated by the API	
	private String speakableName;				//Name of this contact as it should be pronounced.
												//If this contact's name must be spoken as part of a voice disambiguation menu, this name 
												//is used as the expected pronunciation. This is useful for contact names with  
												//unpronounceable characters or whose display spelling is otherwise not phonetic.
	private String type; 						//The type for this contact. This is used for sorting in UIs. 
												//Allowed values are: INDIVIDUAL & GROUP.
	
	/**
	 * Constructor
	 */
	public ffhttp_GoogleMirrorModelContact()
	{
		super(KIND_MIRROR_CONTACT);
	}
	
	/**
	 * Get/Sets
	 */
	public List<AcceptCommand> getAcceptCommands()
	{
		return acceptCommands;
	}
	public ffhttp_GoogleMirrorModelContact setAcceptCommands(List<AcceptCommand> acceptCommands)
	{
		this.acceptCommands = acceptCommands;
		return this;
	}
	public List<String> getAcceptTypes()
	{
		return acceptTypes;
	}
	public ffhttp_GoogleMirrorModelContact setAcceptTypes(List<String> acceptTypes)
	{
		this.acceptTypes = acceptTypes;
		return this;
	}
	public String getDisplayName()
	{
		return displayName;
	}
	public ffhttp_GoogleMirrorModelContact setDisplayName(String displayName)
	{
		this.displayName = displayName;
		return this;
	}
	public String getId()
	{
		return id;
	}
	public ffhttp_GoogleMirrorModelContact setId(String id)
	{
		this.id = id;
		return this;
	}
	public List<String> getImageUrls()
	{
		return imageUrls;
	}
	public ffhttp_GoogleMirrorModelContact setImageUrls(List<String> imageUrls)
	{
		this.imageUrls = imageUrls;
		return this;
	}
	public String getPhoneNumber()
	{
		return phoneNumber;
	}
	public ffhttp_GoogleMirrorModelContact setPhoneNumber(String phoneNumber)
	{
		this.phoneNumber = phoneNumber;
		return this;
	}
	public Integer getPriority()
	{
		return priority;
	}
	public ffhttp_GoogleMirrorModelContact setPriority(Integer priority)
	{
		this.priority = priority;
		return this;
	}
	public String[] getSharingFeatures()
	{
		return sharingFeatures;
	}
	public ffhttp_GoogleMirrorModelContact setSharingFeatures(String[] sharingFeatures)
	{
		this.sharingFeatures = sharingFeatures;
		return this;
	}
	public String getSource()
	{
		return source;
	}
	public ffhttp_GoogleMirrorModelContact setSource(String source)
	{
		this.source = source;
		return this;
	}
	public String getSpeakableName()
	{
		return speakableName;
	}
	public ffhttp_GoogleMirrorModelContact setSpeakableName(String speakableName)
	{
		this.speakableName = speakableName;
		return this;
	}
	public String getType()
	{
		return type;
	}
	public ffhttp_GoogleMirrorModelContact setType(String type)
	{
		this.type = type;
		return this;
	}
	
	/**
	 * AcceptCommand
	 */
	public class AcceptCommand extends ffhttp_AbstractJsonSerializable
	{
		//Instance Variables
		private String type; 		//The type of operation this command corresponds to. 
									//Allowed values are: TAKE_A_NOTE & POST_AN_UPDATE.
		
		/**
		 * Get/Sets
		 */
		public String getType()
		{
			return type;
		}
		public AcceptCommand setType(String type)
		{
			this.type = type;
			return this;
		}
	}		
	
	/**
	 * Object to represent a list of Google Mirror Contacts.
	 */
	public with sharing class ItemList extends ffhttp_GoogleMirrorModelAbstractObject.AbstractList
	{
		List<ffhttp_GoogleMirrorModelContact> items;
		
		/**
		 * Constructor
		 */
		public ItemList()
		{
			super(KIND_MIRROR_CONTACTS_LIST);
		}
		
		public override List<ffhttp_GoogleMirrorModelAbstractObject> getItems() 
		{
			return (List<ffhttp_GoogleMirrorModelContact>)items;
		}
	}	
}
